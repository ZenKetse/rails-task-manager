<h1>All my tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><% if task.completed %>
    <i class="fa-solid fa-square-check"></i>
  <% else %>
    <i class="fa-solid fa-square"></i>
  <% end %>
  - <%= task.title %> <%= link_to "Show task", "tasks/#{task.id}" %> <%= link_to "Update Task", "tasks/#{task.id}/edit" %>
  <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to "Create New Task", "tasks/new" %>
